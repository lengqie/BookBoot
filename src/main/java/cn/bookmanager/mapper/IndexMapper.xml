<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bookmanager.mapper.IndexMapper">
    <select id="getAllBooks" resultType="Books">
        select * from books;
    </select>

    <select id="getAllBooksOrderByHot" resultType="Books">
        select * from books order by hot desc;
    </select>

    <select id="getBookByName" resultType="Books" parameterType="string">
        select * from books where name like '%${name}%' order by hot desc;
    </select>

    <select id="geAllType" resultType="string" parameterType="Books">
        select type from (
            select type, sum(hot) as total from books group by type order by total desc) as t;
    </select>

    <select id="getBooksByType" resultType="Books">
        select * from books where type = #{type} order by hot desc;
    </select>
</mapper>