<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.bookmanager.mapper.UserMapper">

    <select id="isLogin" resultType="int" parameterType="User">
        select count(1) from admin where name=#{name} and password =#{password}
    </select>
    <select id="getUserInfo" resultType="cn.bookmanager.entity.User">
        select * from user where id=#{id}
    </select>
</mapper>